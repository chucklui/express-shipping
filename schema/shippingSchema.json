{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://ACME.com/shipping.schema.json",
    "title": "shipping",
    "description": "Request for shipping",
    "type": "object",
    "properties": {
        "productId": {"type": "integer",
                    "minimum": 1000},
        "name": {"type": "string"},
        "addr": {"type": "string"},
        "zip": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zip"
    ]
}